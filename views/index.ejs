<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #FAF3E0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            color: #2C3E50;
            margin-bottom: 10px;
        }

        nav {
            width: 100%;
            background: #2C3E50;
            padding: 10px 0;
            text-align: right;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            padding-right: 20px;
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-end;
            gap: 15px;
        }

        nav ul li {
            display: inline;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 5px;
            transition: 0.3s;
        }

        nav ul li a:hover {
            background: #1B2730;
        }

        #chat-container {
            background: white;
            width: 600px;
            max-width: 90%;
            height: 500px;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        #messages {
            max-height: 400px;
            overflow-y: auto;
            border-radius: 10px;
            padding: 15px;
            background: #F0F3F4;
            border: 1px solid #2980B9;
            flex: 1;
        }

        #messages p {
            background: #D6EAF8;
            padding: 10px;
            border-radius: 10px;
            margin: 5px 0;
            max-width: 80%;
            word-wrap: break-word;
        }

        #input-container {
            display: flex;
            gap: 10px;
        }

        input {
            flex: 1;
            padding: 10px;
            border: 1px solid #2980B9;
            border-radius: 5px;
        }

        button {
            background: #2980B9;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #1F618D;
        }
    </style>
</head>

<body>
    <nav>
        <ul>
            <% if (typeof user !== "undefined" && user) { %>
                <li>Welcome, <%= user.username %>!</li>
                <li><a href="/user/logout">Logout</a></li>
            <% } else { %>
                <li><a href="/user/signin">Sign In</a></li>
            <% } %>
        </ul>
    </nav>

    <h1>Chat App</h1>

    <div id="chat-container">
        <div id="messages"></div>
        <div id="input-container">
            <input type="text" id="message" placeholder="Enter your message">
            <button id="send">Send</button>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const sendBtn = document.getElementById('send');
        const msgInput = document.getElementById('message');
        const allmsgs = document.getElementById('messages');

        socket.on("message", message => {
            const p = document.createElement('p');
            p.innerText = message;
            allmsgs.appendChild(p);

            allmsgs.scrollTop = allmsgs.scrollHeight;
        });

        sendBtn.addEventListener("click", () => {
            const message = msgInput.value;
            if (message.trim() !== "") {
                socket.emit("user_message", message);
                msgInput.value = "";
            }
        });

        msgInput.addEventListener("keypress", (e) => {
            if (e.key === "Enter") {
                sendBtn.click();
            }
        });
    </script>

</body>

</html>
